{
  "apiVersion": 2,
  "name": "bna/alert",
  "title": "Breaking News Alert",
  "category": "widgets",
  "icon": "megaphone",
  "description": "Displays a breaking news alert banner.",
  "editorScript": "file:./build/index.js",
  "style": "file:./build/style-index.css",
  "attributes": {
    "message": {
      "type": "string",
      "source": "html",
      "selector": "div.alert-message"
    },
    "alertType": {
      "type": "string",
      "default": "info"
    },
    "isDismissible": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "color": {
      "background": true,
      "text": true,
      "enableContrastChecker": true
    }
  }
}
