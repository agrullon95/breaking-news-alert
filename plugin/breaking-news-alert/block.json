{
  "apiVersion": 2,
  "name": "bna/alert",
  "title": "Breaking News Alert",
  "category": "widgets",
  "icon": "megaphone",
  "description": "Displays a breaking news alert banner.",
  "style": "bna-alerts-style",
  "editorStyle": "bna-alerts-style",
  "viewScript": "bna-alerts-frontend-script",
  "editorScript": "bna-alerts-editor-script",
  "render": "bna_render_alerts_block",
  "attributes": {
    "type": {
      "type": "string",
      "default": "info"
    },
    "message": {
      "type": "string"
    },
    "time": {
      "type": "string"
    },
    "priority": {
      "type": "number"
    },
    "title": {
      "type": "string"
    },
    "isDismissible": {
      "type": "boolean",
      "default": false
    },
    "uniqueId": {
      "type": "string"
    },
    "displayGlobally": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "color": {
      "background": true,
      "text": true,
      "enableContrastChecker": true
    },
    "multiple": false
  }
}
